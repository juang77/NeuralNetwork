<Window x:Class="WPFNeuralNetwork.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:local="clr-namespace:WPFNeuralNetwork.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="btnTrain" Content="Train" Width="100" Margin="10" Click="btnTrain_Click"/>
        </StackPanel>

        <Grid x:Name="PlotViewGrid" Grid.Row="1">
            <ScottPlot:WpfPlot x:Name="PlotView" />
        </Grid>

        <TextBox 
             x:Name="ConsoleTextBox"
             Grid.Row="2"
             Margin="10"
             IsReadOnly="True"
             VerticalScrollBarVisibility="Auto"
             HorizontalScrollBarVisibility="Auto"
             HorizontalContentAlignment="Left"
             TextWrapping="Wrap"
             AcceptsReturn="True"
             Background="Black"
             Foreground="Lime"
             FontFamily="Consolas"
             FontSize="14"/>
    </Grid>
</Window>

